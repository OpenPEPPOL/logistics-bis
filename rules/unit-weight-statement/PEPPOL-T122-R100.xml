<testSet xmlns="http://difi.no/xsd/vefa/validator/1.0"
	configuration="peppolbis-T122-base-1.1">
	<assert>
		<description>Verify that IssueTime includes a timezone. </description>
		<scope>PEPPOL-T122-R100</scope>
	</assert>
	
	<test id="1">
		<assert>
			<success>PEPPOL-T122-R100</success>
		</assert>
		<WeightStatement xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2" 
				xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2" 
				xmlns="urn:oasis:names:specification:ubl:schema:xsd:WeightStatement-2">

			<cbc:IssueTime>10:01:02+01:00</cbc:IssueTime>

		</WeightStatement>
	</test>
	
	<test id="2">
		<assert>
			<error>PEPPOL-T122-R100</error>
		</assert>
		<WeightStatement xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2"
				xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
				xmlns="urn:oasis:names:specification:ubl:schema:xsd:WeightStatement-2">

			<cbc:IssueTime>10:01:02</cbc:IssueTime>
			
		</WeightStatement>
	</test>

</testSet>